# URL of the image to use
# EXAMPLE:
# image_uri = "debian-10.5.0-openstack-amd64.qcow2
# image_uri = "http://cdimage.debian.org/cdimage/openstack/current/debian-10.5.0-openstack-amd64.qcow2
image_uri = "${HOME}/Documents/myImages/kvm/debian/debian-10.5.0-openstack-amd64.qcow2"

# Identifier to make all your resources unique and avoid clashes with other users of this terraform project
# stack_name = "my-debian-cluster"
stack_name = "debian"

# CIDR of the network
network_cidr = "10.17.0.0/22"

# Enable creation of LB node
create_lb = true

# Number of etcd nodes
etcds       = 0
etcd_memory = 5120

# Number of storage nodes
storages       = 0
storage_memory = 5120

# Number of master nodes
masters       = 1
master_memory = 5120
master_vcpu   = 2

# Number of worker nodes
workers       = 3
worker_memory = 5120
worker_vcpu   = 4
# worker_disk_size= 107374182400

# Name of DNS domain
dns_domain = "debian.local"

# Username for the cluster nodes
# EXAMPLE:
username = "debian"

# Password for the cluster nodes
# EXAMPLE:
password = "linux"

# define the repositories to use for the loadbalancer node
# EXAMPLE:
# lb_repositories = {
#   repository1 = "http://example.my.repo.com/repository1/"
#   repository2 = "http://example.my.repo.com/repository2/"
# }
lb_repositories = {}

# Optional: Define the repositories to use
# EXAMPLE:
# repositories = {
#   repository1 = "http://example.my.repo.com/repository3/"
#   repository2 = "http://example.my.repo.com/repository4/"
# }
repositories = {}

# Minimum required packages. Do not remove them.
# Feel free to add more packages
packages = [
  "util-linux",
  "python3",
  "curl",
  "wget",
  "rsync",
  "jq",
  "which",
  "openssl",
  "open-iscsi",
  "nfs-kernel-server",
  "tar",
  "zip",
  "unzip",
  "gzip",
  "zstd"
]

# ssh keys to inject into all the nodes
# EXAMPLE:
# authorized_keys = [
#  "ssh-rsa <key-content>"
# ]
authorized_keys = [
  ""
]

# ssh key to launch the nodes with
# EXAMPLE:
# key_pair = "my_keypair"

# IMPORTANT: Replace these ntp servers with ones from your infrastructure
ntp_servers = ["TIME.google.com", "TIME1.google.com", "TIME2.google.com", "TIME3.google.com", "TIME4.google.com"]

# DNS servers for the nodes
# dns_nameservers = [
#     "172.28.0.2",
#     "8.8.8.8",
#     "8.8.4.4",
#     "1.1.1.1",
#     "1.0.0.1",
#     "168.95.1.1",
#     "168.95.192.1"
# ]
dns_nameservers = [
  "8.8.8.8",
  "8.8.4.4"
]

# Set node's hostname from DHCP server
#hostname_from_dhcp = false
